# Push-to-Write Configuration

# Language settings (en, fr, or auto for automatic detection)
DEFAULT_LANGUAGE=auto

# Speech recognition engine (whisper, google, or sphinx)
SPEECH_ENGINE=whisper

# Whisper model size (tiny, base, small, medium, large)
WHISPER_MODEL=base

# Keyboard shortcut (default: alt+t)
HOTKEY_MODIFIER=alt
HOTKEY_KEY=t

# Audio settings
SAMPLE_RATE=16000
CHUNK_SIZE=1024
AUDIO_TIMEOUT=5  # Maximum recording time in seconds
SILENCE_THRESHOLD=500  # Silence detection threshold

# UI settings
SHOW_TRAY_ICON=true
SHOW_NOTIFICATIONS=true

# Debug mode
DEBUG=false